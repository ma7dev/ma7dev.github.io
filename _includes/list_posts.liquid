
{% if include.type == "latest" %}
    {% assign picked_posts = site.posts | sort: "sortable_date" | reverse %}
{% elsif include.type == "popular" %}
    {% assign picked_posts = site.posts | where_exp: "post", "post.popular == true" | sort: "sortable_date" %}
{% elsif include.type == "featured" %}
    {% assign picked_posts = site.posts | where_exp: "post", "post.featured == true" | sort: "sortable_date" %}
{% endif %}

<div class="announcements">
    <div
      class="table-responsive"
      {% if include and picked_posts_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% for post in picked_posts limit: include.limit %}
          <tr>
            <th scope="row" style="width: 20%">
              {% if post.last_updated %}
                <span title="Created at {{ post.date | date: '%b %d, %Y' }} - Updated at {{ post.last_updated | date: '%b %d, %Y' }}">{{ post.last_updated | date: '%b %d, %Y' }}<br><sup class="text-muted">({{ post.date | date: '%b %d, %Y' }})</sup></span>
              {% else %}
                <span title="Created at {{ post.date | date: '%b %d, %Y' }}">{{ post.date | date: '%b %d, %Y' }}</span>
              {% endif %}
            </th>
            <td>
              {% if post.redirect == blank %}
                <a class="announcements-title" href="{{ post.url | relative_url }}">{{ post.title }}</a>
              {% elsif post.redirect contains '://' %}
                <a class="announcements-title" href="{{ post.redirect }}" target="_blank">{{ post.title }}</a>
                <svg width="2rem" height="2rem" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M17 13.5v6H5v-12h6m3-3h6v6m0-6-9 9"
                    class="icon_svg-stroke"
                    stroke="#999"
                    stroke-width="1.5"
                    fill="none"
                    fill-rule="evenodd"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  ></path>
                </svg>
              {% else %}
                <a class="announcements-title" href="{{ post.redirect | relative_url }}">{{ post.title }}</a>
              {% endif %}

                {% assign post_date_in_seconds = post.date | date: "%s" %}
                {% assign current_date_in_seconds = site.time | date: "%s" %}
                {% assign days_since = current_date_in_seconds | minus: post_date_in_seconds | divided_by: 86400 | floor %}
                {% if days_since <= 30 %}<span title="New post (less than 30 days old)">üÜï</span>{% endif %}

              {% if post.popular %}<span title="Popular post">üî•</span>{% endif %}
              {% if post.featured %}<span title="Featured post">üèÖ</span>{% endif %}
              <div class="post-metadata d-flex flex-wrap gap-3 mt-1">
                {% assign words = post.content | number_of_words %}
                {% assign read_time = words | divided_by: 180 | plus: 1 %}
                <span class="reading-time text-muted">
                  <i class="fa-regular fa-clock fa-sm me-1"></i> {{ read_time }} min read
                </span>
                &nbsp;
                &nbsp;
                {% if post.categories.size > 0 or post.redirect contains 'substack.com' %}
                  <span class="categories">
                    <i class="fa-solid fa-tag fa-sm"></i>
                    {% if post.redirect contains 'substack.com' %}
                      <a href="{{ 'announcementsletters' | slugify | prepend: '/archive/category/' | relative_url }}" class="text-decoration-none">announcementsletter</a>
                    {% endif %}
                    {% for category in post.categories %}
                      <a href="{{ category | slugify | prepend: '/archive/category/' | relative_url }}" class="text-decoration-none">{{ category }}</a>{% unless forloop.last %}, {% endunless %}
                    {% endfor %}
                  </span>
                {% endif %}
                &nbsp;
                {% if post.tags.size > 0 %}
                  <span class="tags">
                    <i class="fa-solid fa-hashtag fa-sm"></i> {% for tag in post.tags %}<a href="{{ tag | slugify | prepend: '/archive/tag/' | relative_url }}" class="text-decoration-none">{{ tag }}</a>{% unless forloop.last %}, {% endunless %}{% endfor %}
                  </span>
                {% endif %}
              </div>
            </td>
          </tr>
        {% endfor %}
        {% if latest_posts_size > latest_posts_limit %}
          <tr>
            <th scope="row"></th>
            <td colspan="2"><a href="{{ '/archive/' | relative_url }}">View more...</a></td>
          </tr>
        {% endif %}
      </table>
    </div>
</div>
